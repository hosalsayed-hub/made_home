@inject Microsoft.AspNetCore.Http.IHttpContextAccessor IhttpContextAccessor
@{
    var cookieLingua = "ar";

    if (Context.Request.Cookies["Language"] != null)
    {
        cookieLingua = Context.Request.Cookies["Language"];
    }

}
<!DOCTYPE html>
@{
    var direction = "";
    var munemain = "";
    var Dashborad = "";
}
@if (Context.Request.Cookies["Language"] != null)
{


    if (Context.Request.Cookies["Language"] == "en")
    {
        direction = "ltr";
        munemain = "Home Made";
        Dashborad = "Login";
    }
    else
    {

        direction = "rtl";
        munemain = "شغل بيت";
        Dashborad = "الدخول";
    }
}
else
{
    direction = "rtl";
    munemain = "شغل بيت";
    Dashborad = "الدخول";
}
<!--[if IE 9]>         <html class="ie9 no-focus" lang="en"> <![endif]-->
