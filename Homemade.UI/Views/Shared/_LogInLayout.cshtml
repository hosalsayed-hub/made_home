    @if (Context.Request.Cookies["Language"] != null)
    {
        if (Context.Request.Cookies["Language"] == "ar")
        {
            <link rel="stylesheet" type="text/css" href="~/Content/Login/css/main_ar.css">
        }
        else
        {
            <link rel="stylesheet" type="text/css" href="~/Content/Login/css/main.css">
