                    function GetDashSummaryChart() {
                        $.ajax({
                            type: "GET",
                            url: '/home/GetDashSummaryChart',
                            dataType: "json",
                            async: true,

                            success: function (result) {

                                var listOrdersCount = result.listOrdersCount;
