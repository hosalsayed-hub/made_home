    <script>
        $(".js-datepicker").keypress(function (e) {
            e.preventDefault();
        });
        $('.js-datepicker').datepicker({
            dateFormat: 'yyyy-mm-dd'
        }).on('changeDate', function (ev) {
            $(this).datepicker('hide');
        });
    </script>

    <!-- Select 2 Scripts -->
    <script charset="utf-8" src="~/assets/js/plugins/select2/select2.full.min.js"></script>


    <partial name="_Scripts" />
    <partial name="_TableUnderRequests" />
    <script>
        function GetValue() {
            readtable();
        }
        var isPaused = false;
        function Rest() {
            isPaused = true;
            $('#FromDate').val('');
            $('#ToDate').val('');
            $('#TaxiNumber').val('');
            $('#DriverID').val('');
            $('#DriverID').trigger('change');
            $('#ModelID').val('');
            $('#ModelID').trigger('change');
            $('#BrandID').val('');
            $('#BrandID').trigger('change');
            waitForIt();
            isPaused = false;
        }
        $(document).ready(function () {
            //GetBrands();
            GetValue();
        });
        function waitForIt() {
            if (isPaused) {
                setTimeout(function () { waitForIt() }, 10);
            } else {
                GetValue();
            };
        }
    </script>
}

