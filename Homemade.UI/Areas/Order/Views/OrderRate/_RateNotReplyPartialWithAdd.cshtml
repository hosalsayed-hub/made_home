@model IQueryable<Homemade.BLL.ViewModel.Order.OrderRateViewModel>
@if (Model.Any())
{
    foreach (var item in Model)
    {
        <div class="col-md-6 col-sm-12 form-group text-left">
            <a href="/Customer/Customer/Details/@item.CustomersGuid">
                <img class="img" style="width: 100px; height: 100px; border-radius: 100%;" src="@item.CustomerImage">
            </a>
            <label class="form-material">
                @item.CustomerName
                <br />
                @item.RateDate
            </label>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label for="material-text2">@item.RateTitle</label>
                <textarea class="form-control" id="AnswerRate_@item.OrderRateID" style="display:none" name="AnswerRate_@item.OrderRateID" rows="5"></textarea>
            </div>
        </div>
        <div class="col-md-12 form-group">
            <button class="btn btn-custom bg-info" id="AddRateReply_@item.OrderRateID" onclick="ShowAddRateReply(@item.OrderRateID)">@Homemade.UI.Resources.Homemade.AddReply</button>
            <button class="btn btn-custom bg-orange" style="display:none" id="SaveRateReply_@item.OrderRateID" onclick="SaveRateReply(@item.OrderRateID)"><i class="ion-checkmark push-5-r"></i> @Homemade.UI.Resources.Homemade.save</button>
        </div>
        <div class="col-md-12 form-group">
            <hr style="border: 1px solid #000;" />
        </div>
    }
}
