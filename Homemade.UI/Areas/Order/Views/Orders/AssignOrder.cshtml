@inject Homemade.BLL.Setting.BlConfiguration _blConfiguration
<div class="content">
    <input id="ListOrderVendorID" name="ListOrderVendorID" hidden />
    <input id="ListBlockID" name="ListBlockID" hidden />
    <input id="DriversID" name="DriversID" hidden />
    <input id="HomeMadeMinKM" name="HomeMadeMinKM" value="@_blConfiguration.GetConfigurationMinKM()" hidden />
    <input id="ExternalCompanyMinKM" name="ExternalCompanyMinKM" value="0" hidden />
    <input id="ExternalCompanyBlocksArr" name="ExternalCompanyBlocksArr" hidden />
    <div class="row">
        <div class="col-md-12">
            <div class="block">
                <div class="block-content">
                    <div class="row">
                        <input id="CaptainTypeID" name="CaptainTypeID" value="2" class="AddData" type="hidden" />
                        <div class="col-md-3 col-lg-offset-4" id="Dev_ShippingCompany">
                            <div class="form-group">
                                <label for="material-select2">@Homemade.UI.Resources.Homemade.ShippingCompany <span style="color:red">*</span></label>
                                <select class="form-control js-select2" id="ShippingCompanyID" name="ShippingCompanyID" onchange="ChangeShippingCompany()" style="width: 100%;" data-placeholder="@Homemade.UI.Resources.Homemade.Select" size="1">
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-5 text-right" style="margin-top: 20px;display:none;" id="Dev_ButtonSend">
                            <div class="form-group">
                                <button class="btn btn-custom bg-orange" id="btnSave"><i class="ion-checkmark push-5-r"></i> @Homemade.UI.Resources.Homemade.Send</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6" id="Dev_Blocks">
            <div class="block" style="height: 1100px">
                <div class="block-header bg-gray-lighter">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="block-title">
                                <span class="header-title">@Homemade.UI.Resources.HomemadeMenu.Blocks: <span id="lbl_BlockCount">0</span></span>
                            </h3>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="form-group block-search push-5-r pull-right">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="ion-search"></i></div>
                                    <input type="text" class="form-control" id="DT_search" placeholder="@Homemade.UI.Resources.Homemade.EnterSearchKeywords">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="collapse in">
                    <div class="block-content h_scroll">
                        <div class="row">
                            <table id="tbl_Blocks" class="table table-custom js-dataTable-buttons" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            <label class="css-input css-checkbox css-checkbox-warning">
                                                <input type='checkbox' id='chkSelectAll' onclick='checkAllBlock(this)' /><span></span> @Homemade.UI.Resources.Homemade.All
                                            </label>
                                        </th>
                                        <th class="text-center">#</th>
                                        <th class="text-center">@Homemade.UI.Resources.Homemade.Name</th>
                                        <th class="text-center">@Homemade.UI.Resources.Homemade.OrdersCount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6" id="Dev_Orders">
            <div class="block" style="height: 1100px; overflow: scroll;">
                <div class="block-header bg-gray-lighter">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="block-title">
                                <span class="header-title">@Homemade.UI.Resources.HomemadeMenu.Orders_History: <span id="lbl_OrderCount">0</span></span>
                            </h3>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="form-group block-search push-5-r pull-right">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="ion-search"></i></div>
                                    <input type="text" class="form-control" id="DT_search" placeholder="@Homemade.UI.Resources.Homemade.EnterSearchKeywords">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="collapse in">
                    <div class="block-content h_scroll">
                        <div class="row">
                            <table id="tbl_OrderVendor" class="table table-custom js-dataTable-buttons" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>
                                            <label class="css-input css-checkbox css-checkbox-warning">
                                                <input type='checkbox' id='chkSelectAll' onclick='checkAllOrders(this)' /><span></span> @Homemade.UI.Resources.Homemade.All
                                            </label>
                                        </th>
                                        <th class="text-center">#</th>
                                        <th class="text-center">#</th>
                                        <th class="text-center">@Homemade.UI.Resources.Homemade.Name</th>
                                        <th class="text-center">@Homemade.UI.Resources.Homemade.Block</th>
                                        <th class="text-center">@Homemade.UI.Resources.Homemade.Status</th>
                                        <th class="text-center">@Homemade.UI.Resources.Homemade.Distance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4" id="Dev_Captain" style="display:none;">
            <div class="block" style="height: 1100px">
                <div class="block-header bg-gray-lighter">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="block-title">
                                <span class="header-title">@Homemade.UI.Resources.HomemadeMenu.Captains: <span id="lbl_CaptainCount">0</span></span>
                            </h3>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="form-group block-search push-5-r pull-right">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="ion-search"></i></div>
                                    <input type="text" class="form-control" id="DT_search" placeholder="@Homemade.UI.Resources.Homemade.EnterSearchKeywords">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <input id="OnlineTypeID" name="OnlineTypeID" type="hidden" />
                                    <label class="css-input css-radio css-radio-sm css-radio-warning push-10-r" for="rdbOnline">
                                        <input type="radio" id="rdbOnline" checked name="OnlineType" onchange="ChangeOnlineType()" value="1">
                                        <span></span>
                                        @Homemade.UI.Resources.Homemade.Online
                                    </label>
                                    <label class="css-input css-radio css-radio-sm css-radio-warning push-10-r" for="rdbOffline">
                                        <input type="radio" id="rdbOffline" name="OnlineType" onchange="ChangeOnlineType()" value="0">
                                        <span></span>
                                        @Homemade.UI.Resources.Homemade.Offline
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="collapse in">
                    <div class="Captain-content h_scroll">
                        <table id="tbl_Captain" class="table table-custom js-dataTable-buttons" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th class="text-center"></th>
                                    <th class="text-center">#</th>
                                    <th class="text-center">#</th>
                                    <th class="text-center">@Homemade.UI.Resources.Homemade.Name</th>
                                    <th class="text-center">@Homemade.UI.Resources.Homemade.Block</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <!-- Data_Table Styles -->
    <link rel="stylesheet" href="~/assets/js/plugins/datatables/dataTables.bootstrap4.css" />
    <link rel="stylesheet" href="~/assets/js/plugins/datatables/buttons-bs4/buttons.bootstrap4.min.css" />
    <!-- Select 2 Styles -->
    <link rel="stylesheet" href="~/assets/js/plugins/select2/select2.min.css" />
    <link rel="stylesheet" href="~/assets/js/plugins/select2/select2-bootstrap.min.css" />
    <style>
        .dataTables_filter {
            display: none;
        }

        .block-search {
            width: 100% !important;
        }
    </style>
}

    @section Scripts {
    <!-- Data_table Plugins -->
    <script charset="utf-8" src="~/assets/js/plugins/datatables/jquery.dataTables.min.js"></script>
    <script charset="utf-8" src="~/assets/js/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <script charset="utf-8" src="~/assets/js/plugins/datatables/buttons/dataTables.buttons.min.js"></script>
    <script charset="utf-8" src="~/assets/js/plugins/datatables/buttons/buttons.print.min.js"></script>
    <script charset="utf-8" src="~/assets/js/plugins/datatables/buttons/buttons.html5.min.js"></script>
    <script charset="utf-8" src="~/assets/js/plugins/datatables/buttons/buttons.flash.min.js"></script>
    <!-- Select 2 Scripts -->
    <script charset="utf-8" src="~/assets/js/plugins/select2/select2.full.min.js"></script>

    <partial name="_DataTableBlockAssignOrder" />
}
