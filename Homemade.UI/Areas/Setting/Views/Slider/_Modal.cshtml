@model Homemade.BLL.ViewModel.Setting.SliderViewModel
@inject Homemade.BLL.Setting.BlCountry blCountry
<style>
    .controls {
        width: 250px !important;
    }
</style>
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modal-block-large" aria-hidden="true">
    <div class="modal-dialog modal-dialog-popout modal-dialog-scrollable" role="document">

        <div class="modal-content">
            <div class="block block-themed block-transparent remove-margin-b">
                <div class="block-header">
                    <h3 class="block-title" id="title">
                        @Homemade.UI.Resources.Homemade.SliderType
                    </h3>
                    <div class="block-options">
                        <button type="button" class="close btn-block-option" data-dismiss="modal" aria-label="Close">
                            <i class="ion-android-close"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content modal-body">
                    <form method="post" id="frmCreate" onsubmit="return false"
                          data-ajax="true"
                          data-ajax-complete="completed"
                          data-ajax-method="post">
                        <div class="form-group">
                            <input asp-for="SliderID" type="hidden" />
                            <label for="material-text2">@Homemade.UI.Resources.Homemade.Name_Ar</label>
                            <input asp-for="SliderNameAR" type="text" class="form-control" />
                        </div>
                        <div class="form-group">

                            <label for="material-text2">@Homemade.UI.Resources.Homemade.Name_En</label>
                            <input asp-for="SliderNameEN" type="text" class="form-control" />
                        </div>

                        <div class="form-group">

                            <label for="material-text2">@Homemade.UI.Resources.Homemade.Description_Ar</label>
                            <input asp-for="DescAr" type="text" class="form-control" />
                        </div>
                        <div class="form-group">

                            <label for="material-text2">@Homemade.UI.Resources.Homemade.Description_En </label>
                            <input asp-for="DescEN" type="text" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="material-select2">@Homemade.UI.Resources.Homemade.SliderType <span style="color: red">*</span></label>
                            <select required="" class="form-control js-select2" asp-for="SliderTypeId" name="SliderTypeId" style="width: 100%;" data-placeholder="@Homemade.UI.Resources.Homemade.Select" size="1">

                                <option value="1"> @Homemade.UI.Resources.Homemade.Banner</option>
                                <option value="2"> إعلان </option>
                            </select>
                            <span style="color: red" asp-validation-for="SliderTypeId"> </span>
                        </div>

                        <div class="form-group">
                            <label for="material-select2">@Homemade.UI.Resources.Homemade.DisplayIn <span style="color: red">*</span></label>
                            <select required="" class="form-control js-select2" asp-for="DisplayIn" name="DisplayIn" style="width: 100%;" data-placeholder="@Homemade.UI.Resources.Homemade.Select" size="1">
                                <option value="0"> التطبيق</option>
                                <option value="1"> الموقع </option>
                            </select>
                            <span style="color: red" asp-validation-for="DisplayIn"> </span>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                @if (!string.IsNullOrEmpty(Model.Image))
                                {
                                    <img src="@Model.Image" class="img" width="100" height="100" style="display:block;margin-bottom:7px;" />
                                }
                                <label for="exampleFormControlFile1">@Homemade.UI.Resources.Homemade.Image</label> (856 * 210)
                                <input type="file" class="form-control-file " accept="image/*" id="fupPhoto" onchange="ConvertToBase64Image(this)">
                                @Html.HiddenFor(m => m.Image)
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <div class="modal-footer border-white-op-t">
                <button class="btn btn-sm btn-default" type="button" data-dismiss="modal"> @Homemade.UI.Resources.Homemade.Close </button>
                <button class="btn btn-sm bg-orange" id="btnSave" type="button"> @Homemade.UI.Resources.Homemade.save</button>
            </div>
        </div>
    </div>
</div>