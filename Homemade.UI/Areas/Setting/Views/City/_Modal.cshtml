@model Homemade.BLL.ViewModel.Setting.CityViewModel
@inject Homemade.BLL.Setting.BlCountry blCountry
<style>
    .controls {
        width: 250px !important;
    }
</style>
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modal-block-large" aria-hidden="true">
    <div class="modal-dialog modal-dialog-popout modal-dialog-scrollable" role="document">

        <div class="modal-content">
            <div class="block block-themed block-transparent remove-margin-b">
                <div class="block-header">
                    <h3 class="block-title" id="title">
                        @Homemade.UI.Resources.Homemade.AddCity
                    </h3>
                    <div class="block-options">
                        <button type="button" class="close btn-block-option" data-dismiss="modal" aria-label="Close">
                            <i class="ion-android-close"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content modal-body">
                    <form method="post" id="frmCreate" onsubmit="return false"
                          data-ajax="true"
                          data-ajax-complete="completed"
                          data-ajax-method="post">
                        <div class="form-group">
                            <input asp-for="CountryID" value="@((int)CountryEnum.SA)" type="hidden" />
                            <label for="material-select2">@Homemade.UI.Resources.Homemade.Region <span style="color:red">*</span></label>
                            <select class="form-control js-select2" disabled="" asp-for="RegionID" name="RegionID" style="width: 100%;" data-placeholder="@Homemade.UI.Resources.Homemade.Select" size="1">
                                <option value=""></option>
                            </select>

                            <span style="color:red" asp-validation-for="RegionID"> </span>

                        </div>
                        <div class="form-group">
                            <input asp-for="CityID" type="hidden" />
                            <label for="material-text2">@Homemade.UI.Resources.Homemade.Name_Ar <span style="color:red">*</span></label>
                            <input asp-for="CityNameAR" type="text" class="form-control" />

                            <span style="color:red" asp-validation-for="CityNameAR"> </span>
                        </div>
                        <div class="form-group">

                            <label for="material-text2">@Homemade.UI.Resources.Homemade.Name_En <span style="color:red">*</span></label>
                            <input asp-for="CityNameEN" type="text" class="form-control" />

                            <span style="color:red" asp-validation-for="CityNameEN"> </span>
                        </div>
                        <div class="form-group">
                            <label class="text-center" style="margin-bottom:10px;">
                                <span style="color:red" class="field-validation-valid" data-valmsg-for="lat" data-valmsg-replace="true"> </span>
                            </label>
                            <input id="pac-input"
                                   class="controls"
                                   type="text"
                                   placeholder="Enter a location" />
                            <div id="map" style="width: 100%; height: 307px;overflow:initial"></div>
                            <div id="infowindow-content">
                                <span id="place-name" style="display:none" class="title"></span><br />
                                <strong style="display:none;">Place ID:</strong> <span id="place-id"></span><br />
                                <span id="place-address"></span>
                            </div>
                            <div class="latlngxop" style="opacity:0">
                                <input type="text" id="txtLatHidden" name="lat" data-val="true" data-val-required="@Homemade.UI.Resources.Homemade.ChooseCityOnMap" />
                                <input type="text" id="txtLngHidden" name="lng" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer border-white-op-t">
                <button class="btn btn-sm btn-default" type="button" data-dismiss="modal"> @Homemade.UI.Resources.Homemade.Close </button>
                <button class="btn btn-sm bg-orange" id="btnSave" type="button"> @Homemade.UI.Resources.Homemade.save</button>
            </div>
        </div>
    </div>
</div>
