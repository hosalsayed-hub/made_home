@model Homemade.BLL.ViewModel.Setting.BranchesViewModel
@inject Homemade.BLL.General.BLGeneral bLGeneral
<div class="content">
    <div class="block">
        <div class="block-content h_scroll">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="block-title">
                        <span class="header-title"> @(Homemade.UI.InfraStructure.Utility.CurrentLanguageCode == "ar" ? Html.DisplayFor(x => x.BranchesNameAR) : Html.DisplayFor(x => x.BranchesNameEN) )  </span>
                    </h3>
                </div>
            </div>

            <div class="block-content tab-content">
                <div class="tab-pane active" id="Main_Data">
                    <div class="row">
                        <input type="hidden" asp-for="BranchesID" />
                        @Html.AntiForgeryToken()
                        <div class="col-md-6 form-group">
                            <div class="form-material">
                                @Html.DisplayFor(x => x.BranchesNameAR)
                                <label for="material-text2">@Homemade.UI.Resources.Homemade.NameArabic</label>
                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <div class="form-material">
                                @Html.DisplayFor(x => x.BranchesNameEN)
                                <label for="material-text2">@Homemade.UI.Resources.Homemade.NameEnglish</label>
                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <div class="form-material">
                                @Html.DisplayFor(x => x.MobileNo)
                                <label for="material-text2">@Homemade.UI.Resources.Homemade.Mobile </label>
                            </div>
                        </div>

                        <div class="col-md-6 form-group">
                            <div class="form-material">
                                @Html.DisplayFor(x => x.CityName)
                                <label for="material-select2">@Homemade.UI.Resources.Homemade.City</label>

                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <div class="form-material">
                                @Html.DisplayFor(x => x.FirstEamil)
                                <label for="material-text2">@Homemade.UI.Resources.Homemade.Email </label>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script src="~/Scripts/App/Google/Map.js" id="txtScript"></script>
}
