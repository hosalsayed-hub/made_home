@model Homemade.BLL.ViewModel.Setting.PaymentConfigurationViewModel
@inject Homemade.BLL.Setting.BlCountry blCountry
<style>
    .controls {
        width: 250px !important;
    }
</style>

<div class="content">
    <form enctype="multipart/form-data" method="post" id="frmCreate" onsubmit="return false"
          data-ajax="true"
          data-ajax-complete="completed"
          data-ajax-method="post">
        <div class="block ">
            <div class="block-header">
                <div class="row">
                    <div class="col-md-6">
                        <h3>
                            <span class="header-title">@Homemade.UI.Resources.HomemadeMenu.PaymentConfiguration</span>
                        </h3>
                    </div>
                </div>
            </div>

            <div class="block-content tab-content">

                <div class="row">

                    <div class="col-md-4">
                        <div class="form-group">
                            <input asp-for="PaymentConfigurationID" type="hidden" />
                            <label for="material-text2">@Homemade.UI.Resources.Homemade.IBANNumber <span style="color:red">*</span></label>
                            @Html.TextBoxFor(x => x.IBANnumber, new { @class = "form-control" })

                            <span style="color:red"> @Html.ValidationMessageFor(x => x.IBANnumber)</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">

                            <label for="material-text2">@Homemade.UI.Resources.Homemade.AccountNumber, <span style="color:red">*</span></label>
                            @Html.TextBoxFor(x => x.AccountNumber, new { @class = "form-control" })

                            <span style="color:red"> @Html.ValidationMessageFor(x => x.AccountNumber)</span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="material-select2">@Homemade.UI.Resources.Homemade.ChooseBank <span style="color: red">*</span></label>
                            <select required="" class="form-control js-select2" asp-for="BanksID" name="BanksID" style="width: 100%;" data-placeholder="@Homemade.UI.Resources.Homemade.Select" size="1">
                                <option value=""></option>
                            </select>
                            <span style="color: red" asp-validation-for="BanksID"> </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="exampleFormControlFile1">@Homemade.UI.Resources.Homemade.AccountImage</label>
                            <div id="cr_img"></div>
                            <input type="file" class="form-control-file " accept="image/*" id="fupAccountImage" onchange="ConvertToBase64AccountImage(this)">
                            @Html.HiddenFor(m => m.AccountImage)
                        </div>
                    </div>
                </div>
                <div class="form-group">

                    <button class="btn btn-custom bg-orange" id="btnSave" type="button"><i class="ion-checkmark push-5-r"></i> @Homemade.UI.Resources.Homemade.save</button>
                </div>
            </div>
        </div>
    </form>

</div>

@section Styles {
    <!-- Data_Table Styles -->
    <link rel="stylesheet" href="~/assets/js/plugins/datatables/dataTables.bootstrap4.css" />
    <link rel="stylesheet" href="~/assets/js/plugins/datatables/buttons-bs4/buttons.bootstrap4.min.css" />
