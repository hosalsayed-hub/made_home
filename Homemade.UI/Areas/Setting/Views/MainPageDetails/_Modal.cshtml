@inject Homemade.BLL.Setting.BlMainPageDetails blMainPageDetails
@model Homemade.BLL.ViewModel.Setting.MainPageDetailsViewModel

<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modal-block-large" aria-hidden="true">
    <div class="modal-dialog modal-dialog-popout modal-dialog-scrollable" role="document">

        <div class="modal-content">
            <div class="block block-themed block-transparent remove-margin-b">
                <div class="block-header">
                    <h3 class="block-title" id="title">
                        @Homemade.UI.Resources.Homemade.AddMainPageDetails
                    </h3>
                    <div class="block-options">
                        <button type="button" class="close btn-block-option" data-dismiss="modal" aria-label="Close">
                            <i class="ion-android-close"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content modal-body">
                    <form method="post" id="frmCreate" onsubmit="return false"
                          data-ajax="true"
                          data-ajax-complete="completed"
                          data-ajax-method="post">
                        @Html.HiddenFor(m => m.MainPageID)
                        @Html.HiddenFor(m => m.MainPageDetailsID)
                        <div class="form-group">
                            <label for="material-text2">@Homemade.UI.Resources.Homemade.TitleAr <span style="color:red">*</span></label>
                            <input asp-for="TitleAr" type="text" class="form-control" placeholder="" />
                            <span style="color:red" asp-validation-for="TitleAr"> </span>
                        </div>
                        <div class="form-group">
                            <label for="material-text2">@Homemade.UI.Resources.Homemade.TitleEn <span style="color:red">*</span></label>
                            <input asp-for="TitleEn" type="text" class="form-control" placeholder="" />
                            <span style="color:red" asp-validation-for="TitleEn"> </span>
                        </div>
                        <div class="form-group">
                            <label for="material-text2">@Homemade.UI.Resources.Homemade.Description_Ar <span style="color:red">*</span></label>
                            <textarea asp-for="DescAr" type="text" class="form-control" placeholder=""></textarea>
                            <span style="color:red" asp-validation-for="DescAr"> </span>
                        </div>
                        <div class="form-group">
                            <label for="material-text2">@Homemade.UI.Resources.Homemade.Description_En <span style="color:red">*</span></label>
                            <textarea asp-for="DescEn" type="text" class="form-control" placeholder=""></textarea>
                            <span style="color:red" asp-validation-for="DescEn"> </span>
                        </div>
                        <div class="form-group">
                            <label for="material-text2">@Homemade.UI.Resources.Homemade.VideoLink</label>
                            <input asp-for="VedioLink" type="text" class="form-control" placeholder="" />
                            <span style="color:red" asp-validation-for="VedioLink"> </span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="exampleFormControlFile1">@Homemade.UI.Resources.Homemade.Photo</label>
                            <input type="file" class="form-control-file " accept="image/*" id="fupImage" onchange="ConvertToBase64Image(this)">
                            @Html.HiddenFor(m => m.Image)
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer border-white-op-t">
                <button class="btn btn-sm btn-default" type="button" data-dismiss="modal"> @Homemade.UI.Resources.Homemade.Close </button>
                <button class="btn btn-sm bg-orange" id="btnSave" type="button"> @Homemade.UI.Resources.Homemade.save</button>
            </div>
        </div>
    </div>
</div>


