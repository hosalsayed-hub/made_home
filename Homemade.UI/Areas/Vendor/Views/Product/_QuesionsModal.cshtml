@model Homemade.BLL.ViewModel.Vendor.ProductQuestionViewModel
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modal-block-large" aria-hidden="true">
    <div class="modal-dialog modal-dialog-popout modal-dialog-scrollable" role="document">

        <div class="modal-content">
            <div class="block block-themed block-transparent remove-margin-b">
                <div class="block-header">
                    <h3 class="block-title" id="title">

                        @Homemade.UI.Resources.Homemade.AddProductQuestion
                    </h3>
                    <div class="block-options">
                        <button type="button" class="close btn-block-option" data-dismiss="modal" aria-label="Close">
                            <i class="ion-android-close"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content modal-body">
                    <form method="post" id="frmCreateQuestion" onsubmit="return false" action="CreateProductQuestion" controller="Product" area="Vendor"
                          data-ajax="true"
                          data-ajax-complete="completed"
                          data-ajax-method="post">

                        <div class="form-group">
                            <input asp-for="ProductQuestionID" type="hidden" />
                            <label for="material-text2">@Homemade.UI.Resources.Homemade.Questions_Ar <span style="color:red">*</span></label>
                            <input asp-for="QuestionAr" type="text" class="form-control" placeholder="" />

                            <span style="color:red" asp-validation-for="QuestionAr"> </span>
                        </div>
                        <div class="form-group">
                            <label for="material-text2">@Homemade.UI.Resources.Homemade.Questions_En <span style="color:red">*</span></label>
                            <input asp-for="QuestionEn" type="text" class="form-control" placeholder="" />

                            <span style="color:red" asp-validation-for="QuestionEn"> </span>
                        </div>
                        <div class="form-group">
                            <label for="material-text2">@Homemade.UI.Resources.Homemade.Answer_Ar <span style="color:red">*</span></label>
                            <input asp-for="AnswerAr" type="text" class="form-control" placeholder="" />

                            <span style="color:red" asp-validation-for="AnswerAr"> </span>
                        </div>
                        <div class="form-group">
                            <label for="material-text2">@Homemade.UI.Resources.Homemade.Answer_En <span style="color:red">*</span></label>
                            <input asp-for="AnswerEn" type="text" class="form-control" placeholder="" />

                            <span style="color:red" asp-validation-for="AnswerEn"> </span>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer border-white-op-t">
                <button class="btn btn-sm btn-default" type="button" data-dismiss="modal"> @Homemade.UI.Resources.Homemade.Close </button>
                <button class="btn btn-sm bg-orange" id="btnSaveQuestion" type="button"> @Homemade.UI.Resources.Homemade.save</button>
            </div>
        </div>
    </div>
</div>
