@inject Homemade.BLL.Setting.BlRegion blRegion
@inject Homemade.BLL.BLPermission blPermission
<div class="content">

    <div class="block">
        <div class="block-header bg-gray-lighter">
            <div class="row">
                <div class="col-md-9">
                    <h3 class="block-title" data-toggle="collapse" data-target="#collapseProd" aria-expanded="false" aria-controls="collapseProd">
                        <i class="ion-code-working push-5-r"></i>
                        <span>@Homemade.UI.Resources.Homemade.Search_Filter</span>
                    </h3>

                </div>
            </div>
        </div>
        <div class="collapse" id="collapseProd">
            <div class="block-content block-content-full">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="material-select2">@Homemade.UI.Resources.Homemade.Region <span style="color:red"></span></label>
                            <select multiple="" id="ListRegionID" onchange="GetCityList(this)"
                                    asp-items="@(new MultiSelectList(blRegion.GetRegionsByCountryID((int)CountryEnum.SA).Select(x=>new {
                                                    x.RegionID,Name = Homemade.UI.InfraStructure.Utility.CurrentLanguageCode == "ar" ? x.RegionNameAR : x.RegionNameEN
                                                    }),"RegionID","Name",blRegion.GetRegionsByCountryID((int)CountryEnum.SA).Select(x => x.RegionID.ToString()).ToList()))"
                                    class="js-select2 form-control AddData" name="material-select2" style="width: 100%;" data-placeholder="@Homemade.UI.Resources.Homemade.Select">
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="material-select2">@Homemade.UI.Resources.Homemade.City <span style="color:red"></span></label>
                            <select multiple="" disabled="" id="ListCityID" onchange="GetBlockList(this)" class="js-select2 form-control AddData" style="width: 100%;" data-placeholder="@Homemade.UI.Resources.Homemade.Select">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="material-select2">@Homemade.UI.Resources.Homemade.Block <span style="color:red"></span></label>
                            <select multiple="" disabled="" id="ListBlockID" class="js-select2 form-control AddData" style="width: 100%;" data-placeholder="@Homemade.UI.Resources.Homemade.Select">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="material-select2">@Homemade.UI.Resources.Homemade.Vendor <span style="color:red"></span></label>
                            <select multiple="" id="ListVendorID" class="js-select2 form-control AddData" style="width: 100%;" data-placeholder="@Homemade.UI.Resources.Homemade.Select">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="material-select2">@Homemade.UI.Resources.Homemade.Nationality <span style="color:red"></span></label>
                            <select multiple="" id="ListNationalityID" class="js-select2 form-control AddData" style="width: 100%;" data-placeholder="@Homemade.UI.Resources.Homemade.Select">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="material-select2">@Homemade.UI.Resources.Homemade.Gender <span style="color:red"></span></label>
                            <select multiple="" id="ListGenderID" class="js-select2 form-control AddData" style="width: 100%;" data-placeholder="@Homemade.UI.Resources.Homemade.Select">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="col-xs-12">@Homemade.UI.Resources.Homemade.RegType</label>
                            <div class="col-md-12">
                                <label class="css-input css-checkbox css-checkbox-warning push-10-r" for="rdbCreated">
                                    <input type="checkbox" class="filtercheck" id="rdbCreated" name="RegTypeId" value="1">
                                    <span></span>
                                    @Homemade.UI.Resources.Homemade.lbl_Created
                                </label>
                                <label class="css-input css-checkbox css-checkbox-warning push-10-r" for="rdbSubmitted">
                                    <input type="checkbox" class="filtercheck" id="rdbSubmitted" name="RegTypeId" value="2">
                                    <span></span>
                                    @Homemade.UI.Resources.Homemade.Submitted
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="col-xs-12">@Homemade.UI.Resources.Homemade.Status</label>
                            <div class="col-md-12">
                                <label class="css-input css-checkbox css-checkbox-warning push-10-r" for="rdbEnabled">
                                    <input type="checkbox" class="filtercheck" id="rdbEnabled" name="StatusId" value="1">
                                    <span></span>
                                    @Homemade.UI.Resources.Homemade.Enabled
                                </label>
                                <label class="css-input css-checkbox css-checkbox-warning push-10-r" for="rdbDisabled">
                                    <input type="checkbox" class="filtercheck" id="rdbDisabled" name="StatusId" value="0">
                                    <span></span>
                                    @Homemade.UI.Resources.Homemade.Disabled
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="col-xs-12">@Homemade.UI.Resources.Homemade.VacctionStatus</label>
                            <div class="col-md-12">
                                <label class="css-input css-checkbox css-checkbox-warning push-10-r" for="rdbVacation">
                                    <input type="checkbox" class="filtercheck" id="rdbVacation" name="VacctionStatusId" value="1">
                                    <span></span>
                                    @Homemade.UI.Resources.Homemade.Vacation
                                </label>
                                <label class="css-input css-checkbox css-checkbox-warning push-10-r" for="rdbOnWork">
                                    <input type="checkbox" class="filtercheck" id="rdbOnWork" name="VacctionStatusId" value="0">
                                    <span></span>
                                    @Homemade.UI.Resources.Homemade.OnWork
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-6 text-right pull-right" style="margin: 13px 0px">
                        <button id="btnRest" onclick="Rest();" type="button" style="margin:12px 0px" class="btn btn-custom btn-info">
                            <i class="ion-refresh push-5-r"></i>
                            @Homemade.UI.Resources.Homemade.Reset
                        </button>
                        <button onclick="GetValue()" type="button" style="margin:12px 5px" class="btn btn-custom bg-orange">
                            <i class="ion-search push-5-r" aria-hidden="true"></i>
                            @Homemade.UI.Resources.Homemade.Search
                        </button>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <div class="block">
        <div class="block-header bg-gray-lighter">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="block-title">
                        <span class="header-title">@Homemade.UI.Resources.HomemadeMenu.Vendors</span>
                    </h3>
                </div>
                <div class="col-md-6">
                    <div class="text-right">
                        <div class="col-md-6 paddingleft-0">
                            <div class="form-group block-search push-5-r pull-right">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="ion-search"></i></div>
                                    <input type="text" class="form-control" id="DT_search" placeholder="@Homemade.UI.Resources.Homemade.EnterSearchKeywords">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            @if (blPermission.GetPermissionByUserAndController(User.Identity.Name, (int)Homemade.BLL.ControllerEnum.Vendors, (int)Homemade.BLL.ActionEnum.Insert))
                            {
                            <a class="btn btn-md btn-block addBtn btn-width100" href="/Vendor/Vendors/Create" data-toggle="tooltip" title="@Homemade.UI.Resources.Homemade.New">
                                <i class="ion-plus-round push-5-r"></i>
                                @Homemade.UI.Resources.Homemade.New
                            </a>
                            }
                        </div>
                    </div>
                    <div class="dt_buttons_wrap text-right"></div>
                </div>
            </div>
        </div>
        <div class="collapse in" id="collapseOrder">
            <div class="block-content h_scroll">
                <table id="tbl_Vendor" class="table table-custom js-dataTable-buttons" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">@Homemade.UI.Resources.Homemade.SNumber</th>
                            <th class="text-center">@Homemade.UI.Resources.Homemade.Logo</th>
                            <th class="text-center">@Homemade.UI.Resources.Homemade.Store</th>
                            <th class="text-center">@Homemade.UI.Resources.Homemade.City</th>
                            <th class="text-center">@Homemade.UI.Resources.Homemade.Mobile</th>
                            @*<th class="text-center">@Homemade.UI.Resources.Homemade.Email</th>*@
                            <th class="text-center">@Homemade.UI.Resources.Homemade.RegType</th>
                            @*<th class="text-center">@Homemade.UI.Resources.Homemade.DeliveryType</th>*@
                            <th class="text-center">@Homemade.UI.Resources.Homemade.Create_Date</th>
                            <th class="text-center">@Homemade.UI.Resources.Homemade.VacctionStatus</th>
                            <th class="text-center">@Homemade.UI.Resources.Homemade.Entry</th>
                            <th class="text-center">@Homemade.UI.Resources.Homemade.Status</th>
                            <th class="text-center">@Homemade.UI.Resources.Homemade.DisplayStatus</th>
                            <th>@Homemade.UI.Resources.Homemade.Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <!-- Data_Table Styles -->
    <link rel="stylesheet" href="~/assets/js/plugins/datatables/dataTables.bootstrap4.css" />
    <link rel="stylesheet" href="~/assets/js/plugins/datatables/buttons-bs4/buttons.bootstrap4.min.css" />

    <!-- Select 2 Styles -->
    <link rel="stylesheet" href="~/assets/js/plugins/select2/select2.min.css" />
    <link rel="stylesheet" href="~/assets/js/plugins/select2/select2-bootstrap.min.css" />
    <style>
        .dataTables_filter {
            display: none;
        }

        .bg-info {
            background-color: #682300;
            color: #fff;
            border: 2px solid #682300;
        }
    </style>
}

@section Scripts{
    <!-- Data_table Plugins -->
    <script charset="utf-8" src="~/assets/js/plugins/datatables/jquery.dataTables.min.js"></script>
    <script charset="utf-8" src="~/assets/js/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <script charset="utf-8" src="~/assets/js/plugins/datatables/buttons/dataTables.buttons.min.js"></script>
    <script charset="utf-8" src="~/assets/js/plugins/datatables/buttons/buttons.print.min.js"></script>
    <script charset="utf-8" src="~/assets/js/plugins/datatables/buttons/buttons.html5.min.js"></script>
    <script charset="utf-8" src="~/assets/js/plugins/datatables/buttons/buttons.flash.min.js"></script>

    <!-- Date_picker Plugins -->
    <script src="~/assets/js/plugins/bootstrap-datetimepicker/moment.min.js"></script>
    <script charset="utf-8" src="~/assets/js/plugins/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script charset="utf-8" src="~/assets/js/plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.min.js"></script>
    <script charset="utf-8" src="~/assets/js/plugins/Hijiri-Plugin/js/bootstrap-hijri-datetimepicker.js"></script>
    <script>
        $(".js-datepicker").keypress(function (e) {
            e.preventDefault();
        });
        $('.js-datepicker').datepicker({
            dateFormat: 'yyyy-mm-dd'
        }).on('changeDate', function (ev) {
            $(this).datepicker('hide');
        });
    </script>
    <!-- Select 2 Scripts -->
    <script charset="utf-8" src="~/assets/js/plugins/select2/select2.full.min.js"></script>
    <partial name="_DataTable" />


    <script>
        function GetValue(t) {
            readtable(t);
        }
        var isPaused = false;
        function Rest() {
            isPaused = true;
            $.getJSON('/Setting/Region/GetAllListRegionIDBySACountry', '', function (data) {
                $('#ListRegionID').val(data);
                $('#ListRegionID').trigger('change');
            });
            $('.filtercheck').prop('checked', false);
            $('#ListCityID').val('');
            $('#ListCityID').trigger('change');
            $('#ListBlockID').val('');
            $('#ListBlockID').trigger('change');
            $('#ListVendorID').val('');
            $('#ListVendorID').trigger('change');
            $('#ListNationalityID').val('');
            $('#ListNationalityID').trigger('change');
            $('#ListGenderID').val('');
            $('#ListGenderID').trigger('change');
            waitForIt();
            isPaused = false;
        }
        $(document).ready(function () {
            $('#ListRegionID').trigger('change');
            GetVendorList();
            GetAllNationality();
            GetAllGender();
            GetValue(1);
        });
        function waitForIt() {
            if (isPaused) {
                setTimeout(function () { waitForIt() }, 10);
            } else {
                GetValue();
            };
        }
    </script>
}