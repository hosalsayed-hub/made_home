@model Homemade.BLL.ViewModel.Site.PagingViewModel
@Html.Hidden("PageCount", Model.Pagecount)
@if (Model.ItemCount > Model.NumberOfItems)
{
    <div class="products-pagination">
        <ul class="pagination-ul">
            <li class="pagination-item prev-arrow-item">
                <a class="arrow-link prev-arrow text-center" href="javascript:" onclick="GoToPage(@(Model.CurrentPage-1))">@Homemade.UI.Resources.Homemade.Previous</a>
            </li>
            @if (Model.Pagecount <= 5)
            {
                for (int i = 1; i <= Model.Pagecount; i++)
                {
                    <li class="pagination-item">
                        <a class="pagination-link page_link @(Model.CurrentPage == i? "active" : "")" href="javascript:" onclick="GoToPage(@i)">
                            <span class="dot-icon"><i class="fas fa-circle"></i></span>
                            <span class="page-num">@i</span>
                        </a>
                    </li>
                }
            }
            else
            {
                if (Model.CurrentPage < 4)
                {
                    @for (int i = 1; i < 4; i++)
                    {
                        <li class="pagination-item">
                            <a class="pagination-link page_link @(Model.CurrentPage == i? "active" : "")" href="javascript:" onclick="GoToPage(@i)">
                                <span class="dot-icon"><i class="fas fa-circle"></i></span>
                                <span class="page-num">@i</span>
                            </a>
                        </li>
                    }
                    <li class="pagination-item dots-area">
                        <a class="pagination-link page_link " href="javascript:">
                            <span>....</span>
                        </a>
                    </li>
                    <li class="pagination-item dots-area">
                        <a class="pagination-link page_link " onclick="GoToPage(@Model.Pagecount)" href="javascript:">
                            <span>@Model.Pagecount</span>
                        </a>
                    </li>
                }
                else if (Model.CurrentPage > (Model.Pagecount - 3))
                {
                    <li class="pagination-item">
                        <a class="pagination-link page_link @(Model.CurrentPage == 1? "active" : "")" href="javascript:" onclick="GoToPage(1)">
                            <span class="dot-icon"><i class="fas fa-circle"></i></span>
                            <span class="page-num">1</span>
                        </a>
                    </li>
                    <li class="pagination-item dots-area">
                        <a class="pagination-link page_link " href="javascript:">
                            <span>....</span>
                        </a>
                    </li>
                    @for (int i = (Model.Pagecount - 2); i <= Model.Pagecount; i++)
                    {
                        <li class="pagination-item">
                            <a class="pagination-link page_link @(Model.CurrentPage == i? "active" : "")" href="javascript:" onclick="GoToPage(@i)">
                                <span class="dot-icon"><i class="fas fa-circle"></i></span>
                                <span class="page-num">@i</span>
                            </a>
                        </li>
                    }
                }
                else
                {
                    <li class="pagination-item">
                        <a class="pagination-link page_link @(Model.CurrentPage == 1? "active" : "")" href="javascript:" onclick="GoToPage(1)">
                            <span class="dot-icon"><i class="fas fa-circle"></i></span>
                            <span class="page-num">1</span>
                        </a>
                    </li>
                    <li class="pagination-item dots-area">
                        <a class="pagination-link page_link " href="javascript:">
                            <span>....</span>

                        </a>
                    </li>
                    @for (int i = ((Model.CurrentPage - 1) == 0 ? 1 : (Model.CurrentPage - 1)); i <= (Model.CurrentPage + 1); i++)
                    {
                        <li class="pagination-item">
                            <a class="pagination-link page_link @(Model.CurrentPage == i? "active" : "")" href="javascript:" onclick="GoToPage(@i)">
                                <span class="dot-icon"><i class="fas fa-circle"></i></span>
                                <span class="page-num">@i</span>
                            </a>
                        </li>
                    }
                    <li class="pagination-item dots-area">
                        <a class="pagination-link page_link " href="javascript:">
                            <span>....</span>

                        </a>
                    </li>
                    <li class="pagination-item dots-area">
                        <a class="pagination-link page_link " onclick="GoToPage(@Model.Pagecount)" href="javascript:">
                            <span>@Model.Pagecount</span>
                        </a>
                    </li>
                }
            }
            <li class="pagination-item next-arrow-item">
                <a class="arrow-link next-arrow text-center" href="javascript:" onclick="GoToPage(@(Model.CurrentPage+1))">@Homemade.UI.Resources.Homemade.Next</a>
            </li>
        </ul>

    </div>
}