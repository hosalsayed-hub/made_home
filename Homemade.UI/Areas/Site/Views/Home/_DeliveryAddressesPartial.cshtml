@inject Homemade.BLL.General.BLUser blUser
@inject Homemade.BLL.Customer.BlCustomer _blCustomer
@{
    var AllLocations = _blCustomer.GetAllSiteCustomerLocationViewModelByUser(User.GetUserIdInt(), Homemade.UI.InfraStructure.Utility.CurrentLanguageCode);
}
<div class="user-dashboard-content delivery-addresses-area">

    <div class="delivery-addresses-items">

        @foreach (var item in AllLocations)
        {
            <div class="delivery-address-item">

                <div class="delivery-address-wrap">

                    <a href="#" class="delivery-address-img">

                        <img class="img-fluid" src="~/assets/homeMadeSite/img/Mask%20Group%206.png">
                        <span class="map-icon"><i class="fas fa-map-marker-alt"></i></span>

                    </a>
                    <div class="delivery-address-details">

                        <div class="address-type">

                            <span class="address-type-icon"><i class="fas fa-home"></i></span>
                            @item.AddressTypesName
                        </div>
                        <div class="address-title">
                            @item.Address

                        </div>
                        <div class="address-info">

                            <div class="address-info-box user-address-name">

                                <div class="box-icon">

                                    <i class="fas fa-user"></i>

                                </div>
                                <div class="box-text user-name">@item.Name</div>

                            </div>
                            @*<div class="address-info-box user-address-tel">

                        <div class="box-icon">

                        <i class="fas fa-phone-alt"></i>

                        </div>
                        <div class="box-text user-tel">@item.MobileNo</div>

                        </div>
                        <div class="address-info-box user-address-location">

                        <div class="box-icon">

                        <i class="fas fa-map-signs"></i>

                        </div>
                        <div class="box-text user-location">@item.UniqueSign</div>

                        </div>*@

                        </div>

                    </div>

                </div>

                <div class="delivery-address-actions">

                    <button class="modify-address" type="button" data-toggle="tooltip" onclick="ShowDeliveryAddressModal(@item.CustomerLocationID, 2)">

                        <svg xmlns="http://www.w3.org/2000/svg" width="22.12" height="19.658" viewBox="0 0 22.12 19.658">
                            <path id="Icon_awesome-edit" data-name="Icon awesome-edit" d="M15.461,3.2l3.464,3.464a.375.375,0,0,1,0,.53l-8.387,8.387-3.564.4a.747.747,0,0,1-.826-.826l.4-3.564L14.931,3.2A.375.375,0,0,1,15.461,3.2Zm6.221-.879L19.808.445a1.5,1.5,0,0,0-2.12,0L16.329,1.8a.375.375,0,0,0,0,.53L19.793,5.8a.375.375,0,0,0,.53,0l1.359-1.359a1.5,1.5,0,0,0,0-2.12ZM14.747,13.3v3.909H2.458V4.919h8.825a.472.472,0,0,0,.326-.134l1.536-1.536a.461.461,0,0,0-.326-.787H1.843A1.844,1.844,0,0,0,0,4.3V17.822a1.844,1.844,0,0,0,1.843,1.843H15.361A1.844,1.844,0,0,0,17.2,17.822v-6.06a.462.462,0,0,0-.787-.326l-1.536,1.536A.472.472,0,0,0,14.747,13.3Z" transform="translate(0 -0.007)" />
                        </svg>


                    </button>

                    <button class="delete-address" onclick="DeleteLocationConfirm(@item.CustomerLocationID)" type="button">

                        <svg xmlns="http://www.w3.org/2000/svg" width="19.479" height="25.044" viewBox="0 0 19.479 25.044">
                            <path id="Icon_material-delete-forever" data-name="Icon material-delete-forever" d="M8.891,26.761a2.791,2.791,0,0,0,2.783,2.783H22.8a2.791,2.791,0,0,0,2.783-2.783v-16.7H8.891Zm3.423-9.906,1.962-1.962,2.964,2.95,2.95-2.95,1.962,1.962L19.2,19.8l2.95,2.95-1.962,1.962-2.95-2.95-2.95,2.95-1.962-1.962,2.95-2.95ZM22.109,5.891,20.718,4.5H13.761L12.37,5.891H7.5V8.674H26.979V5.891Z" transform="translate(-7.5 -4.5)"></path>
                        </svg>

                    </button>

                </div>

            </div>
        }


        <div class="delivery-address-item add-new-address">

            <div class="delivery-address-wrap">

                <a href="#" class="delivery-address-img" data-toggle="tooltip" onclick="ShowDeliveryAddressModal(0,1)">

                    <img class="img-fluid" src="~/assets/homeMadeSite/img/Mask%20Group%206.png">
                    <span class="map-icon"><i class="fas fa-plus-circle"></i></span>
                    <span class="add-new-address-text">@Homemade.UI.Resources.Homemade.Add_New_Address</span>

                </a>




            </div>


        </div>

    </div>

</div>