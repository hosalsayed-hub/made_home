<!-- ***** contact-ways-section Start ***** -->
@{
    var Contacts = blConfiguration.GetConfigurations();
}
<section class="section-style contact-ways-section">

    <div class="container">

        <div class="contact-ways-area">

            <div class="row mb-4">

                <div class="col-12">

                    <h3 class="contact-ways about-us-main-title">@Homemade.UI.Resources.Homemade.You_can_contact_us_via </h3>

                </div>
                <div class="col-md-6">

                    <div class="contact-way-area">
                        @foreach (var item in Contacts)
                        {
                            <div class="contact-way-item">

                                <div class="contact-way-icon"><i class="fas fa-phone-alt"></i></div>

                                <div class="contact-way-wrap">

                                    <span class="contact-way-content">@item.MobileNumber</span>
                                    <span class="contact-way-content comma">-</span>
                                    <span class="contact-way-content">@item.PhoneNumber</span>

                                </div>
                            </div>
                        }

                    </div>

                </div>
                <div class="col-md-6">

                    <div class="contact-way-area">
                        @foreach (var item in Contacts)
                        {
                            <div class="contact-way-item">

                                <div class="contact-way-icon"><i class="fas fa-envelope"></i></div>
                                <div class="contact-way-wrap">

                                    <a class="contact-way-content" href="#">@item.Email</a>
                                </div>
                            </div>
                        }

                    </div>

                </div>


            </div>
            <div class="row">

                <div class="col-12">

                    <h3 class="contact-ways about-us-main-title">@Homemade.UI.Resources.Homemade.or_through_our_branches_in </h3>

                </div>
                <div class="col-md-12">

                    <div class="contact-way-area">
                        @foreach (var item in Contacts)
                        {
                            <div class="contact-way-item">

                                <div class="contact-way-icon">

                                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="31.667" viewBox="0 0 30 31.667">
                                        <path id="Icon_material-location-city" data-name="Icon material-location-city" d="M24.5,18V8l-5-5-5,5v3.333H4.5V34.667h30V18ZM11.167,31.333H7.833V28h3.333Zm0-6.667H7.833V21.333h3.333Zm0-6.667H7.833V14.667h3.333Zm10,13.333H17.833V28h3.333Zm0-6.667H17.833V21.333h3.333Zm0-6.667H17.833V14.667h3.333Zm0-6.667H17.833V8h3.333Zm10,20H27.833V28h3.333Zm0-6.667H27.833V21.333h3.333Z" transform="translate(-4.5 -3)" fill="#a1835c" />
                                    </svg>


                                </div>
                                <div class="contact-way-wrap full-line">

                                    <span class="contact-way-content">
                                        @item.Address

                                    </span>
                                    <span class="contact-way-content">

                                        <i class="fas fa-phone-alt"></i>
                                        @item.MobileNumber
                                    </span>

                                </div>
                            </div>
                        }


                    </div>

                </div>


            </div>


        </div>


    </div>

</section>

<!-- ***** contact-ways-section End ***** -->