<!-- ***** breadcrumb-section Start ***** -->

<section class="breadcrumb-section">

    <div class="container">


        <div class="row">

            <div class="col-12">

                <nav class="breadcrumb-nav" aria-label="breadcrumb">

                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Site/Home/Index">@Homemade.UI.Resources.Homemade.DashBoard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Homemade.UI.Resources.Homemade.AboutUs </li>


                    </ol>
                </nav>

            </div>

        </div>
    </div>

</section>

<!-- ***** breadcrumb-section End ***** -->
<!-- ***** about-us-section Start ***** -->

<section class="section-style about-us-section">

    <div class="container">

        <div class="row">

            <div class="col-12">

                <div class="about-us-banner-area">

                    <div class="about-us-banner-title about-us-main-title">@Model.HomeTitle</div>
                    <div class="about-us-banner" style="background-image: url(@Model.Image)">
                        <div class="about-us-banner-text">

                            <h3>@Model.MainPageDetailsTitle</h3>
                            <p>
                                @Model.Desc

                            </p>
                        </div>

                    </div>
                </div>

                <div class="about-us-info">

                    <div class="about-us-details">

                        <h3 class="details-title about-us-main-title">@Model.IdeaTitle </h3>
                        <p class="details-text">
                            @Model.IdeaDesc
                        </p>
                    </div>


                </div>

                <div class="about-us-desc">

                    <div class="row">


                        <div class="col-md-6 mb-4 mb-md-0">

                            <div class="about-us-desc-text">

                                <div class="about-us-details">

                                    <h3 class="details-title about-us-main-title">@Model.HomeTitle</h3>

                                    <p class="details-text">
                                        @Model.HomeDesc
                                    </p>
                                </div>


                            </div>

                        </div>
                        <div class="col-md-6">

                            <div class="about-us-desc-img">
                                <img class="img-fluid" src="@Model.Image" />

                            </div>

                        </div>
                    </div>

                </div>

            </div>

        </div>

    </div>

</section>

<!-- ***** about-us-section End ***** -->
